@model Cumulative_3_N01627546.Models.Teacher
@{
    ViewBag.Title = "Update";
}

<h2>Update Teacher</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="containershow">
    <nav>
        <a class="btn btn-outline-primary" href="/Teacher/Show/@Model.TeacherId">Go Back To Teachers</a>
    </nav>
    <form method="POST" action="/Teacher/Update/@Model.TeacherId">
        <div class="form-group">
            <label asp-for="TeacherFName">First Name:</label>
            <div class="form-control">
                @Html.EditorFor(model => model.TeacherFName)
                @Html.ValidationMessageFor(model => model.TeacherFName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TeacherLName">Last Name:</label>
            <div class="form-control">
                @Html.EditorFor(model => model.TeacherLName)
                @Html.ValidationMessageFor(model => model.TeacherLName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmployeeNumber">Employee Number:</label>
            <div class="form-control">
                @Html.EditorFor(model => model.EmployeeNumber)
                @Html.ValidationMessageFor(model => model.EmployeeNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="HireDate">Hire Date:</label>
            <div class="form-control">
                @Html.TextBoxFor(model => model.HireDate, new { @type = "date", @Value = Model.HireDate.ToString("yyyy-MM-dd") })
                @Html.ValidationMessageFor(model => model.HireDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Salary">Salary:</label>
            <div class="form-control">
                @Html.EditorFor(model => model.Salary)
                @Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <input class="bg-success" type="submit"  value="Update Teacher" />
    </form>
</div>
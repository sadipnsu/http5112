@model Cumulative_2_N01627546.Models.Teacher
@{
    ViewBag.Title = "AddNew";
}

<h2>Add New Teacher</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="id="containershow">
    <nav><a class="navlink" href="/Teacher/List">Go Back To Teachers</a></nav>
    <br />
    <br />
    <form method="POST" action="/Teacher/AddNew" class="form-control-lg">
        <div class="col-md-10 mb-3">
            <label for="TeacherFName">Teacher First Name:</label>
            @Html.EditorFor(model => model.TeacherFName)
            @Html.ValidationMessageFor(model => model.TeacherFName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-10 mb-3">
            <label for="TeacherLName">Teacher Last Name:</label>
            @Html.EditorFor(model => model.TeacherLName)
            @Html.ValidationMessageFor(model => model.TeacherLName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-10 mb-3">
            <label for="EmployeeNumber">Employee Number:</label>
            @Html.EditorFor(model => model.EmployeeNumber)
            @Html.ValidationMessageFor(model => model.EmployeeNumber, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-10 mb-3">
            <label for="HireDate">Hire Date:</label>
            @Html.TextBoxFor(model => model.HireDate, new { @type = "date" })
            @Html.ValidationMessageFor(model => model.HireDate, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-10 mb-3">
            <label for="Salary">Salary:</label>
            @Html.EditorFor(model => model.Salary)
            @Html.ValidationMessageFor(model => model.Salary, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-10">
            <input class="bg-secondary" type="submit" value="Add Teacher" />
        </div>
    </form>
</div>

